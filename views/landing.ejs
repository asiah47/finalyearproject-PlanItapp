<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PlanIT - My Events</title>
  <link rel="stylesheet" href="/main.css">
  <link rel="stylesheet" href="/landing.css">
</head>
<body>
  <div class="landing-container">
    <h1>Welcome to PlanIT</h1>

    <div class="routes-section">
      <h2>PlanIT Pages</h2>
      <ul>
        <li><a href="/">Landing Page</a></li>
        <li><a href="/add-event">Add Event</a></li>
        <li><a href="/dashboard/1">Dashboard (event 1)</a></li>
        <li><a href="/budget/1">Budget</a></li>
        <li><a href="/guests/1">Guests</a></li>
        <li><a href="/tasks/1">Tasks</a></li>
        <li><a href="/moodboard/1">Moodboard</a></li>
        <li><a href="/edit-event/1">Edit Event</a></li>
        <li><a href="/users/login">Login</a></li>
        <li><a href="/users/register">Register</a></li>
        <li><a href="/users/profile">Profile</a></li>
        <li><a href="/users/logout">Logout</a></li>
      </ul>
    </div>


    <% if (events.length > 0) { %>
      <div class="events-grid">
        <% events.forEach(event => { %>
          <div class="event-card">
            <h2><%= event.event_name %></h2>
            <p><%= event.event_date.toDateString() %></p>
            <div class="card-actions">
              <a href="/dashboard/<%= event.event_id %>" class="view-btn">View Event</a>
              <form action="/delete-event/<%= event.event_id %>" method="POST">
                <button type="submit" class="delete-btn" onclick="return confirm('Delete this event?')">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <a href="/add-event" class="add-btn">âž• Add Your First Event</a>
      </div>
    <% } %>
  </div>
</body>
</html>

