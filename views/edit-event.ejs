<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Event</title>
  <link rel="stylesheet" href="/main.css">
  <link rel="stylesheet" href="/budget.css">
</head>
<body>
  <div class="dashboard-container">

    <!-- Sidebar -->
    <%- include('partials/sidebar', { eventId: event.event_id }) %>

    <!-- Main Content -->
    <div class="main-content">
      <h1>Edit Event: <%= event.event_name %></h1>

      <form action="/edit-event/<%= event.event_id %>" method="POST">
        <label for="event_name">Event Name:</label>
        <input type="text" id="event_name" name="event_name" value="<%= event.event_name %>" required>

        <label for="event_date">Event Date & Time:</label>
        <input type="datetime-local" id="event_date" name="event_date" value="<%= event.event_date.toISOString().slice(0,16) %>" required>

        <label for="total_budget">Total Budget (Â£):</label>
        <input type="number" step="0.01" id="total_budget" name="total_budget" value="<%= event.total_budget || '' %>">

        <button type="submit">Save Changes</button>
      </form>
    </div>

  </div>
</body>
</html>