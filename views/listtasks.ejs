<!doctype html>
<html lang="en">
  <head>
    <title>Welcome to <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <%- include('partials/navbar') %>
    
    <div class="page-wrapper">
      <h1>Your Events</h1>
      <h2>Here's a list of your upcoming events:</h2>

      <% if (availableTasks && availableTasks.length > 0) { %> <!-- Still using 'availableTasks' -->
        <ul>
          <% availableTasks.forEach(function(task) { %> <!-- Still using 'task' variable names -->
            <li>
              <strong>Event Title:</strong> <%= task.title %><br />
              <strong>Description:</strong> <%= task.description %><br />
              <strong>Event Date:</strong> <%= task.due_date %><br /> <!-- Assuming 'due_date' is the event date -->
              <strong>Priority:</strong> <%= task.priority_level %><br />
              <form method="POST" action="/tasks/delete/<%= task.id %>" style="display:inline;">
                <button type="submit" class="delete-button">Delete Event</button>
              </form>
            </li>
            <hr />
          <% }) %>
        </ul>
      <% } else { %>
        <p>No events available. Create one to get started!</p>
      <% } %>
    </div>

  </body>
</html>